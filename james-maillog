LOGFILE=maillog
ONE=to
TWO=from
ACCOUNT=marie-france
THISHOST=`hostname|cut -d "." -f 1`

grep -l "\<$ONE=<$ACCOUNT" /var/log/$LOGFILE >/dev/null \
	&& egrep "$(
		echo `grep "\<$ONE=<$ACCOUNT" /var/log/$LOGFILE \
			|cut -d ":" -f  4`\
		|sed "s/ /|/g"\
		)" /var/log/$LOGFILE \
	| grep "\<$TWO="|sed "s/\(.*:..:..\).*$TWO=\(.*\)/\\1 \\2/"\
	| cut -d "," -f 1
