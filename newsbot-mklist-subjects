#!/bin/sh

if [ -f ~/.newsbot-rc ]
then
        . ~/.newsbot-rc
fi

#cd $MSGPATH
grep ^Subject * | \
	sed "s/\[/(/g" | sed "s/\]/)/g" | \
	sed "s/[()]\(.*\)(\(.*\)\/\(.*\)).*/\\1 (\\2\/\\3)/" | \
	sed "s/[()]\(.*\)(\(.*\)\/\(.*\)).*/\\1 (\\2\/\\3)/" | \
	sed "s/[()]\(.*\)(\(.*\)\/\(.*\)).*/\\1 (\\2\/\\3)/" | \
	sed "s/[()]\(.*\)(\(.*\)\/\(.*\)).*/\\1 (\\2\/\\3)/" | \
	sed "s/(/ (/g" | sed "s/ *(/ (/g" | \
	sed "s/ *\././g" | \
	sed "s/\(.*\)\.\(.*\)\.\([[:digit:]]*\) (/\\1.\\3.\\2 (/" \
	> .getsubject
