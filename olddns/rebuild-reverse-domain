for file in *.clpb.be.dns; do domain=`echo $file|sed "s/dns$//"`;   cat $file|while read host in a ip; do if [ "$a" = "A" ]; then subnet=`echo $ip|cut -d "." -f 1,2`; if [ "$subnet" = "192.168" ]; then revip=`echo $ip|sed "s/\([0-9]*\)\.\([0-9]*\)\.\([0-9]*\)\.\([0-9]*\)/\\4.\\3/"`; echo -e "$ip\t$revip\tIN\tPTR\t$host.$domain"|grep -v "@"; fi; fi; done; done|sort -n|more|cut -f 2- >> 168.192.in-addr.arpa.dns 
