CONFIG=~/.sitecopyrc
LOCAL=mnt/servers/host1/www
FOLDERS="preview production"
if [ $1 ]
then
	FULL=$1
else
	FULL=`pwd`
fi
RELATIVE=`echo $FULL | sed "s/^.*\/www\///"`
	echo $RELATIVE

if [ $2 ]
then 
        SITENAME=$2
else
        SITENAME=`basename $FULL`
fi

for REMOTE in $FOLDERS 
do
	ABBR=`echo $REMOTE | cut -c 1-4`
	SITEID=${SITENAME}_${ABBR}
	if ( grep "^site $SITEID$" $CONFIG )
	then
		echo  Settings \"$SITEID\" already exists in $CONFIG
	else
		echo "site $SITEID"			>> $CONFIG
		echo "     server www.solvay.com"	>> $CONFIG
		echo "     remote /$REMOTE/$RELATIVE"	>> $CONFIG
		echo "     local $FULL"			>> $CONFIG
		echo					>> $CONFIG
		echo
		echo Settings \"$SITEID\" created
		echo "   Local: /$LOCAL/$RELATIVE"
		echo "   Remote: /$REMOTE/$RELATIVE"
	fi
done
